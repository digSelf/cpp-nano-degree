	"version": "2.0.0",
	"tasks": [
		{
			"label": "CleanUp_Client",
			"type": "shell",
			"command": "rm",
			"args": [
				"-rf",
				"${fileDirname}/build/*"
			],
		},
	  {
		"type": "shell",
		"label": "Build C++",
		"command": "clang++",
		"args": [
		  "-std=c++17",
		  "-g",
		  "-Wall",
		  "${file}",
		  "-o",
		  "${fileDirname}/build/${fileBasenameNoExtension}"
		],
		"options": {
		  "cwd": "${workspaceFolder}"
		},
		"group": {
		  "kind": "build",
		  "isDefault": true
		},
		// "dependsOrder": "sequence",
		// "dependsOn": [
		// 	"CleanUp_Client"
		// ],
		"detail": "Task generated by Debugger."
	  }
	]
}